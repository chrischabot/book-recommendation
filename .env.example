PGPOOL_MIN=2
PGPOOL_MAX=20

# Optional Redis for response caching
REDIS_URL="redis://localhost:6379"

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_EMBED_MODEL="text-embedding-3-large"
